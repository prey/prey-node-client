#!/bin/sh

dir="$(dirname $0)"
# [ -z "$script" ] && echo "Usage: prey.sh [script] <args>" && exit 1

if [ "$1" = "config" ]; then
  script="lib/conf/cli.js"
elif [ "$1" = "test" ]; then
  script="node_modules/mocha/bin/mocha"
else
  script="lib/agent/cli.js"
fi

if [ -x "$dir/node" ]; then
  "$dir/node" "$dir/../${script}" "$@" &
else
  node "$dir/../${script}" "$@" &
fi

# Capture the child process PID
child="$!"

# Kill the child process when start-stop-daemon sends us a QUIT signal
trap "kill -QUIT $child" QUIT
trap "" TERM

# Wait for child process to exit
wait
